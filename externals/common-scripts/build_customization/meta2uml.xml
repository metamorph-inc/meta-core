        <NameValuePair
          Name="Exclude"
          Value="^meta2uml_RuleAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <StringListProperty
      Name="AdditionalDependencies"
      Category="General"
      DisplayName="Additional Dependencies"
      IncludeInCommandLine="False"
      Visible="true" />
  </Rule>
  <ItemType
    Name="meta2uml"
    DisplayName="meta2uml" />
  <FileExtension
    Name="*.mga"
    ContentType="meta2uml" />
  <ContentType
    Name="meta2uml"
    DisplayName="meta2uml"
